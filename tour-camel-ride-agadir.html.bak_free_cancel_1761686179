    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.js"></script>
    <script src="js/main.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const slider = document.querySelector('.simple-slider');
            if (slider) {
                const slides = Array.from(slider.querySelectorAll('.slide'));
                const prevBtn = slider.querySelector('.ss-prev');
                const nextBtn = slider.querySelector('.ss-next');
                const dotsContainer = slider.querySelector('.ss-dots');
                const thumbsContainer = document.querySelector('.ss-thumbs');
                let currentIndex = 0;

                function goTo(index) {
                    slides[currentIndex].classList.remove('active');
                    currentIndex = (index + slides.length) % slides.length;
                    slides[currentIndex].classList.add('active');
                    updateDots();
                    updateThumbs();
                }

                function updateDots() {
                    const dots = dotsContainer.querySelectorAll('.ss-dot');
                    dots.forEach((d, i) => d.classList.toggle('active', i === currentIndex));
                }

                function renderDots() {
                    dotsContainer.innerHTML = '';
                    slides.forEach((_, i) => {
                        const btn = document.createElement('button');
                        btn.className = 'ss-dot' + (i === currentIndex ? ' active' : '');
                        btn.setAttribute('aria-label', 'Go to slide ' + (i + 1));
                        btn.addEventListener('click', () => goTo(i));
                        dotsContainer.appendChild(btn);
                    });
                }

                function updateThumbs() {
                    if (!thumbsContainer) return;
                    const all = thumbsContainer.querySelectorAll('.ss-thumb');
                    all.forEach((t, i) => t.classList.toggle('active', i === currentIndex));
                }

                function renderThumbs() {
                    if (!thumbsContainer) return;
                    thumbsContainer.innerHTML = '';
                    slides.forEach((slide, i) => {
                        const img = slide.querySelector('img');
                        const wrap = document.createElement('button');
                        wrap.className = 'ss-thumb' + (i === currentIndex ? ' active' : '');
                        wrap.setAttribute('aria-label', 'Select slide ' + (i + 1));
                        const thumbImg = document.createElement('img');
                        thumbImg.src = img.src;
                        thumbImg.alt = img.alt;
                        wrap.appendChild(thumbImg);
                        wrap.addEventListener('click', () => goTo(i));
                        thumbsContainer.appendChild(wrap);
                    });
                }

                prevBtn.addEventListener('click', () => goTo(currentIndex - 1));
                nextBtn.addEventListener('click', () => goTo(currentIndex + 1));

                document.addEventListener('keydown', (e) => {
                    if (e.key === 'ArrowLeft') goTo(currentIndex - 1);
                    if (e.key === 'ArrowRight') goTo(currentIndex + 1);
                });

                renderDots();
                renderThumbs();
            }
        });
    </script>
<script>
const hamburger=document.getElementById("hamburger");
const mobileMenu=document.getElementById("mobileMenu");
const closeMenu=mobileMenu?mobileMenu.querySelector(".close-menu"):null;
if(hamburger&&mobileMenu){hamburger.addEventListener("click",()=>{mobileMenu.classList.add("active");hamburger.classList.add("active")});}
if(closeMenu){closeMenu.addEventListener("click",()=>{mobileMenu.classList.remove("active");hamburger&&hamburger.classList.remove("active")});}
if(mobileMenu){mobileMenu.querySelectorAll("a").forEach(a=>a.addEventListener("click",()=>{mobileMenu.classList.remove("active");hamburger&&hamburger.classList.remove("active")}));}
</script>
</body>
