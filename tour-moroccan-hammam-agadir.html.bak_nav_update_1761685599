    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.js"></script>
    <script src="js/main.js"></script>
    
    <script>
        // Custom Gallery JavaScript
        document.addEventListener('DOMContentLoaded', function() {
            const root = document.querySelector('.tour-gallery');
            if (!root) return;

            const lightbox = root.querySelector('.tg-lightbox');
            const mainContainer = lightbox?.querySelector('.tg-main .swiper-wrapper');
            const thumbsContainer = lightbox?.querySelector('.tg-thumbs .swiper-wrapper');
            const buttons = root.querySelectorAll('.tg-item, .tg-view-all, .tg-see-more');
            const prevBtn = lightbox?.querySelector('.tg-prev');
            const nextBtn = lightbox?.querySelector('.tg-next');
            const closeBtn = lightbox?.querySelector('.tg-close');

            let currentIndex = 0;
            const images = [
                'img/excursions/spa/spa 1.jpg',
                'img/excursions/spa/spa 2.png',
                'img/excursions/spa/spa 3.jpg',
                'img/excursions/spa/spa 4.jpg',
                'img/excursions/spa/spa 5.jpg'
            ];

            function updateGallery() {
                if (mainContainer) {
                    const slides = mainContainer.querySelectorAll('.swiper-slide');
                    slides.forEach((slide, index) => {
                        if (index === currentIndex) {
                            slide.style.display = 'flex';
                            slide.style.opacity = '1';
                            slide.style.zIndex = '10';
                        } else {
                            slide.style.display = 'none';
                            slide.style.opacity = '0';
                            slide.style.zIndex = '1';
                        }
                        // Reset any problematic styles
                        slide.style.width = '100%';
                        slide.style.height = '100%';
                        slide.style.marginRight = '0';
                        slide.style.marginLeft = '0';
                        slide.style.position = 'absolute';
                        slide.style.top = '0';
                        slide.style.left = '0';
                    });
                }

                if (thumbsContainer) {
                    const thumbSlides = thumbsContainer.querySelectorAll('.swiper-slide');
                    thumbSlides.forEach((slide, index) => {
                        slide.classList.toggle('swiper-slide-thumb-active', index === currentIndex);
                    });
                }
            }

            function openAt(index) {
                currentIndex = index;
                updateGallery();
                if (lightbox) {
                    lightbox.classList.add('open');
                    document.body.style.overflow = 'hidden';
                }
            }

            function close() {
                if (lightbox) {
                    lightbox.classList.remove('open');
                    document.body.style.overflow = '';
                }
            }

            function next() {
                currentIndex = (currentIndex + 1) % images.length;
                updateGallery();
            }

            function prev() {
                currentIndex = (currentIndex - 1 + images.length) % images.length;
                updateGallery();
            }

            // Event listeners
            buttons.forEach((btn, index) => {
                btn.addEventListener('click', (e) => {
                    e.preventDefault();
                    const targetIndex = parseInt(btn.dataset.index) || index;
                    openAt(targetIndex);
                });
            });

            prevBtn?.addEventListener('click', prev);
            nextBtn?.addEventListener('click', next);
            closeBtn?.addEventListener('click', close);

            // Keyboard navigation
            document.addEventListener('keydown', (e) => {
                if (!lightbox?.classList.contains('open')) return;
                if (e.key === 'Escape') close();
                if (e.key === 'ArrowLeft') prev();
                if (e.key === 'ArrowRight') next();
            });

            // Close on backdrop click
            lightbox?.addEventListener('click', (e) => {
                if (e.target === lightbox) {
                    close();
                }
            });

            // Initialize
            updateGallery();

            // Hook for "See more photos" button
            document.querySelector('.tg-see-more')
                ?.addEventListener('click', () => openAt(0)); // uses your existing openAt()
        });

        // FAQ Accordion
        $('.faq-question').on('click', function() {
            const faqItem = $(this).parent();
            const wasActive = faqItem.hasClass('active');
            
            // Close all FAQ items
            $('.faq-item').removeClass('active');
            
            // Open clicked item if it wasn't already open
            if (!wasActive) {
                faqItem.addClass('active');
            }
        });

        // Set minimum date to today
        document.getElementById('tour-date').min = new Date().toISOString().split('T')[0];
    </script>
<script>
const hamburger=document.getElementById("hamburger");
const mobileMenu=document.getElementById("mobileMenu");
const closeMenu=mobileMenu?mobileMenu.querySelector(".close-menu"):null;
if(hamburger&&mobileMenu){hamburger.addEventListener("click",()=>{mobileMenu.classList.add("active");hamburger.classList.add("active")});}
if(closeMenu){closeMenu.addEventListener("click",()=>{mobileMenu.classList.remove("active");hamburger&&hamburger.classList.remove("active")});}
if(mobileMenu){mobileMenu.querySelectorAll("a").forEach(a=>a.addEventListener("click",()=>{mobileMenu.classList.remove("active");hamburger&&hamburger.classList.remove("active")}));}
</script>
</body>
</html>

